<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="physique.model.Physique">
	
	<select id="GetOnePhysique" resultType="physique.model.PhysiqueBean">
		select * from physique where id=#{id} and phdate=#{phdate}
	</select>
	
	<select id="GetPhysiqueByDate" resultType="String">
		select phdate from physique where id=#{id} and (phdate between #{smon} and #{emon})
	</select>
	
	<insert id="InsertPhysique">
		insert into physique values(phseq.nextval, #{id}, #{height}, #{weight}, #{bmi}, #{phdate}, #{skeletalmuscle}, #{bodyfatper}, #{bmr}, #{phimage})
	</insert>
	
	<delete id="DeletePhysique">
		delete physique where phnum=#{phnum}
	</delete>
	
	<select id="GetPhysiqueByPhnum" resultType="physique.model.PhysiqueBean">
		select * from physique where phnum=#{phnum}
	</select>
	
	<update id="UpdatePhysique">
		update physique 
		set height=#{height}, weight=#{weight}, bmi=#{bmi}, phdate=#{phdate}, skeletalmuscle=#{skeletalmuscle}, bodyfatper=#{bodyfatper}, bmr=#{bmr}, phimage=#{phimage}
		where phnum=#{phnum}
	</update>
	
	<select id="GetPhysiqueList" resultType="physique.model.PhysiqueBean">
		select * from physique where id=#{id}
	</select>
	
</mapper>
 